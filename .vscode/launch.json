    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm run server",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run server",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/src",
        },
        {
            "name": "npm run client",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run client",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/src",
        },
        {
            "name": "open chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/client",
            "skipFiles": [
                "${workspaceFolder}/src/client/node_modules/**/*.js",
              ],
        }
    ],
    "compounds": [
        {
          "name": "run client, server, and open chrome",
          "configurations": ["npm run server", "npm run client", "open chrome"],
          "stopAll": true,
        }
    ]
}